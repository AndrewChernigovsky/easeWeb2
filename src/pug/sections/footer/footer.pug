        div(class=ClassfooterWrapper)
            div(class=ClassfooterInner)
                div(class=ClassfooterBlock)
                    include ../../blocks/logo
                    p(class=ClassfooterBlock__company)= footerMain.p1_1
                div(class=ClassfooterBlock)
                    a(class=ClassfooterBlock__telephone href="tel:+79998062321")= footerMain.tel
                    a(class=ClassfooterBlock__polite href="../../pages/polite.html")= footerMain.polite
            div(class=ClassfooterInner)
                nav(class=ClassNavListFooter)
                    ul(class=ClassListFooter)
                        li(class=ClassItemFooter)
                            if mainPage
                                a(class=ClassLinkFooter+ ' active' href="#")= footerMain.link__1
