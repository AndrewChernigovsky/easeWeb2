section(class=introSection)
	hr(class=classmenuLine)
	.container
		div(class=introSectionWrapper)
			h1(class=titleDefault__H1+ ' ' + ClassintroSection__H1+ ' ' +colorTextBlack)
				span= 'easeweb'
				br
				span(class=ClassintroSection__h1__span3)= 'разработка сайтов'
				span(class=ClassintroSection__h1__span3)= 'продвижение'
			div(class=ClassintroSectionInner)
				include form
				include image
			if developPage
				div(class=ClassIntroSectionTexts)
					div(class=ClassIntroSectionTextsInner)
						h2(class=ClassIntroSectionText+' anima1')
							|   Создание сайта
							br
							|   «под—ключ»
						h2(class=ClassIntroSectionText+' anima2')= 'Редизайн'
						h2(class=ClassIntroSectionText+' anima3')
							|   Поддержка
							br
							|   готового сайта